//leet code solution
class Solution {
  public:
    // Function to return the diameter of a Binary Tree.
    int ans=0;
    int diameter(Node* root) {
        if(!root)return 0;
        
        int left = diameter(root->left);
        int right = diameter(root->right);
        ans = max(ans, 1+left+right);
     
       return 1+ max(left,right);
    }
};
